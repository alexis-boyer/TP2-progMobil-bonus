<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/table_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/tv_calc"
                android:background="#ffffff"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:inputType="none"
                android:editable="false"
                android:focusable="false">
            </TextView>>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/bt_1"
                android:text="1" />
            <Button android:id="@+id/bt_2"
                android:text="2"/>
            <Button android:id="@+id/bt_3"
                android:text="3"/>
            <Button android:id="@+id/bt_add"
                android:text="+"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/bt_4"
                android:text="4" />
            <Button android:id="@+id/bt_5"
                android:text="5"/>
            <Button android:id="@+id/bt_6"
                android:text="6"/>
            <Button android:id="@+id/bt_sous"
                android:text="-"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/bt_7"
                android:text="7" />
            <Button android:id="@+id/bt_8"
                android:text="8"/>
            <Button android:id="@+id/bt_9"
                android:text="9"/>
            <Button android:id="@+id/bt_mult"
                android:text="*"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/bt_addsous"
                android:text="+/-" />
            <Button android:id="@+id/bt_0"
                android:text="0"/>
            <Button android:id="@+id/bt_point"
                android:text="."/>
            <Button android:id="@+id/bt_div"
                android:text="/"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/bt_decal"
                android:text="&lt;-" />
            <Button android:id="@+id/bt_M"
                android:text="M" />
            <Button android:id="@+id/bt_MR"
                android:text="MR" />
            <Button android:id="@+id/bt_egale"
                android:text="=" />
        </TableRow>
    </TableLayout>
</LinearLayout>